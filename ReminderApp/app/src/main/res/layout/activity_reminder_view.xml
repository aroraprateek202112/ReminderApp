<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_id"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<TextView
        android:id="@+id/tv_reminder_state_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/active"
        android:background="@color/gray"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/toolbar_id"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/card_view_margin_left_right"
                android:layout_marginLeft="@dimen/card_view_margin_left_right"
                android:layout_marginRight="@dimen/card_view_margin_left_right"
                android:layout_marginStart="@dimen/card_view_margin_left_right"
                android:layout_marginTop="@dimen/card_view_margin_top_bottom"
                android:background="@color/dull_white"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_category_icon_id"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_todo"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tv_category_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ToDo"
                        android:gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/card_view_margin_left_right"
                android:layout_marginLeft="@dimen/card_view_margin_left_right"
                android:layout_marginRight="@dimen/card_view_margin_left_right"
                android:layout_marginStart="@dimen/card_view_margin_left_right"
                android:layout_marginTop="@dimen/card_view_margin_top_bottom"
                android:background="@color/dull_white"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_id"
                        android:text="@string/title"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_remider_info_id"
                        android:text="@string/notes"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/card_view_margin_left_right"
                android:layout_marginLeft="@dimen/card_view_margin_left_right"
                android:layout_marginRight="@dimen/card_view_margin_left_right"
                android:layout_marginStart="@dimen/card_view_margin_left_right"
                android:layout_marginTop="@dimen/card_view_margin_top_bottom"
                android:background="@color/dull_white"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reminder_time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/bt_due_date_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/colorPrimary"
                            android:text="@string/due_date"
                            android:textColor="@color/dull_white" />

                        <Button
                            android:id="@+id/bt_time_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/colorPrimary"
                            android:text="@string/time"
                            android:textColor="@color/dull_white" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/card_view_margin_left_right"
                android:layout_marginLeft="@dimen/card_view_margin_left_right"
                android:layout_marginRight="@dimen/card_view_margin_left_right"
                android:layout_marginStart="@dimen/card_view_margin_left_right"
                android:layout_marginTop="@dimen/card_view_margin_top_bottom"
                android:background="@color/dull_white"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_repeat" />

                        <TextView
                            android:id="@+id/tv_reminder_type_id"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="One Time Event"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_repeat_id"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_repeat_count_id"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/tv_repeat_interval_type_id"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Hour"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum=""></LinearLayout>-->

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_edit_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/fab_margin_bottom"
        android:layout_marginEnd="@dimen/fab_margin_right"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:elevation="0dp"
        android:src="@drawable/ic_edit" />

</RelativeLayout>